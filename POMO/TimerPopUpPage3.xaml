<?xml version="1.0" encoding="utf-8" ?>
<toolkit:Popup xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="POMO.TimerPopUpPage3"
             xmlns:toolkit="clr-namespace:CommunityToolkit.Maui.Views;assembly=CommunityToolkit.Maui"
             CanBeDismissedByTappingOutsideOfPopup="False"
             Color="Transparent"
             VerticalOptions="Center"
             HorizontalOptions="Fill">


    <!-- CHOOSE TASK POP UP -->

    <Border StrokeThickness="0"
        BackgroundColor="White"
        HorizontalOptions="Center"
        StrokeShape="RoundRectangle 20"
        WidthRequest="350">

        <VerticalStackLayout Padding="-2">
            <HorizontalStackLayout Padding="10">
                <VerticalStackLayout Padding="20" Spacing="10">
                    <Label 
                        Text="Number of Sessions:"
                        HorizontalTextAlignment="Start"
                        LineBreakMode="WordWrap" 
                        TextColor="#4B96FF" 
                        FontSize="18"
                        WidthRequest="270"/>
                    <Border BackgroundColor="#4B96FF"
                            HorizontalOptions="Center"
                            HeightRequest="50"
                            WidthRequest="200"
                            Padding="-20"
                            StrokeShape="RoundRectangle 10">
                        <Grid ColumnDefinitions=".3*, .4*, .3*">
                            <Button Text=" -"
                               FontSize="40"
                               TextColor="White"
                               HorizontalOptions="End"
                               BackgroundColor="Transparent"/>
                            <Label Text="2"
                               FontSize="30"
                               TextColor="White"
                               FontAttributes="Bold"
                               VerticalOptions="Center"
                               HorizontalOptions="Center"
                               Grid.Column="1"/>
                            <Button Text="+    "
                               FontSize="30"
                               TextColor="White"
                               BackgroundColor="Transparent"
                               HorizontalOptions="Start"
                               Grid.Column="2"/>
                        </Grid>
                    </Border>
                </VerticalStackLayout>
            </HorizontalStackLayout>

            <HorizontalStackLayout HorizontalOptions="Center">
                <Button Text="Continue" Clicked="CloseButton_Clicked" 
                    BackgroundColor="#4B96FF"
                    TextColor="White"
                    WidthRequest="180"
                    CornerRadius="0"
                    FontSize="17"/>
                <Button Text="Cancel" Clicked="CloseButton_Clicked" 
                    BackgroundColor="White"
                    TextColor="#4B96FF"
                    BorderWidth="1"
                    BorderColor="#4B96FF"
                    WidthRequest="180"
                    CornerRadius="0"
                    FontSize="17"/>
            </HorizontalStackLayout>

        </VerticalStackLayout>

    </Border>


</toolkit:Popup>
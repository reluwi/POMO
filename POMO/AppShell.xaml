<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="POMO.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:POMO"
    Shell.FlyoutBehavior="Flyout"
    Title="POMO">

    <!-- Login Page -->
    <ShellContent
        Title="Starting"
        ContentTemplate="{DataTemplate local:StartingPage}"
        Route="StartingPage" />

    <!-- Main Page -->
    <ShellContent
        Title="Home"
        ContentTemplate="{DataTemplate local:MainPage}"
        Route="MainPage" />

    <!-- Timer Page -->
    <ShellContent
        Title="Timer"
        ContentTemplate="{DataTemplate local:TimerPage}"
        Route="TimerPage" />

    <!-- Running Time Page -->
    <ShellContent
        Title="RunningTime"
        ContentTemplate="{DataTemplate local:RunningTimePage}"
        Route="RunningTimePage" />
</Shell>
